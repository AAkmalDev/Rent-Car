<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ui.auth.login.LoginFragment">

    <ProgressBar
        android:id="@+id/progress_bar"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginBottom="30dp"
        android:textSize="28sp"
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="#FF0000"
        android:visibility="gone"
        android:id="@+id/login_text_phone"
        android:textSize="16sp"
        android:text="raqamni kiriting"
        android:layout_gravity="start"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/login_phone_text"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@color/white"
            android:text="+998"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>

        <com.santalu.maskara.widget.MaskEditText
            android:layout_marginStart="2dp"
            android:textSize="18sp"
            android:inputType="phone"
            android:id="@+id/login_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:mask="(__)-___-__-__"
            app:maskCharacter="_"
            android:background="@color/white"
            android:hint="tel raqamni kiriting" />
    </LinearLayout>



    <TextView
        android:textColor="#FF0000"
        android:id="@+id/login_text_password"
        android:textSize="16sp"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:text="parolni kiriting"
        android:layout_gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/login_password"
        android:background="@color/white"
        android:hint="parolni kiriting"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <Button
        android:background="#FFC107"
        android:text="ok"
        android:id="@+id/login_button_ok"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_gravity="start"
        android:id="@+id/login_register"
        android:text="Registratsya"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>